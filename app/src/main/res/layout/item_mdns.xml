<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_service_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="service name" />

    <TextView
        android:id="@+id/textView_service_type"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/rounded_bg"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_service_name"
        tools:text="service type" />

    <TextView
        android:id="@+id/textView_host"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toEndOf="@+id/textView_service_type"
        app:layout_constraintTop_toBottomOf="@+id/textView_service_name"
        tools:text="host" />

    <TextView
        android:id="@+id/textView_port"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toEndOf="@+id/textView_host"
        app:layout_constraintTop_toBottomOf="@+id/textView_service_name"
        tools:text="port" />
</androidx.constraintlayout.widget.ConstraintLayout>